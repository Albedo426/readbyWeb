
@using webproje.Models;
@model albooksContext
@{
    ViewBag.Title = "AllBooks";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<div class="slider-area ">
    <div class="single-slider hero-overly slider-height2 d-flex align-items-center" data-background="../../temp/readBy/assets/img/hero/about.jpg">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="hero-cap pt-100">
                        <h2>Tüm Yayımlar</h2>
                        <nav aria-label="breadcrumb ">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/homr/index">Anasayfa</a></li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- slider Area End-->
<!--================Blog Area =================-->
<section class="blog_area section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mb-5 mb-lg-0">
                <div class="blog_left_sidebar">
                    @foreach (var item in Model.getbookOrderScrol())
                    {
                        <article class="blog_item">

                            <div class="blog_item_img">
                                <img class="card-img rounded-0" src="../../temp/readBy/assets/img/gallery/@item.img" style="max-height: 385px;" alt="">
                                @if (HttpContext.Current.Session["Username"] != null)
                                {
                                    <a href="/home/BlogSingle/@item.Id.ToString()" class="blog_item_date">
                                        <h3>Satinal</h3>
                                        <p>@item.price TL</p>
                                    </a>
                                }
                                else
                                {
                                    <a href="/home/login" class="blog_item_date">
                                        <h3>Üye ol</h3>
                                    </a>
                                }

                            </div>

                            <div class="blog_details">

                                <p  >@item.bookName</p>
                                <h4>@item.summary</h4>
                                <ul class="blog-info-link">
                                    <li><a href="#"><i class="fa fa-user"></i> @item.user.userName</a></li>
                                    @foreach (Category category in item.categories)
                                    {
                                        <li>
                                            <a href="#">@category.Name</a>
                                        </li>
                                    }

                                </ul>
                            </div>
                        </article>
                    }

                    <!--
                    <nav class="blog-pagination justify-content-center d-flex">
                        <ul class="pagination">
                            <li class="page-item">
                                <a href="#" class="page-link" aria-label="Previous">
                                    <i class="ti-angle-left"></i>
                                </a>
                            </li>
                            <li class="page-item">
                                <a href="#" class="page-link">1</a>
                            </li>
                            <li class="page-item active">
                                <a href="#" class="page-link">2</a>
                            </li>
                            <li class="page-item">
                                <a href="#" class="page-link" aria-label="Next">
                                    <i class="ti-angle-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>-->
                </div>
            </div>
            <div class="col-lg-4">
                <div class="blog_right_sidebar">
                    <aside class="single_sidebar_widget search_widget">
                            <form method="POST">
                                <div class="form-group">
                                    <div class="input-group mb-3">
                                        <input type="text" class="form-control"
                                               onfocus="this.placeholder = ''"
                                               onblur="this.placeholder = 'Aranacak kelime'"
                                               placeholder="Aranacak Kelime" name="SearchbookString" />

                                        <div class="input-group-append">
                                            <button class="btns" type="submit"><i class="ti-search"></i></button>
                                        </div>
                                    </div>
                                </div>
                                <button class="button rounded-0 primary-bg text-white w-100 btn_1 boxed-btn"
                                        type="submit">
                                    Ara
                                </button>
                            </form>
                    </aside>

                   

                    <aside class="single_sidebar_widget popular_post_widget">
                        <h3 class="widget_title">Son Yazılar</h3>
                        @foreach (var item in Model.getbookOrder(3))
                        {
                            <div class="media post_item">
                                <img src="../../temp/readBy/assets/img/gallery/@item.img" width="75" height="75" alt="post">
                                <div class="media-body">
                                        <h3>@Html.ActionLink(item.summary, "BlogSingle", "home", new { Id = item.Id.ToString() },null)</h3>
                                </div>
                            </div>
                        }

                    </aside>


                    <aside class="single_sidebar_widget newsletter_widget">
                        <h4 class="widget_title">Haberdar Olmak İstemez misiniz ?</h4>

                       
                    </aside>
                </div>
            </div>
        </div>
    </div>
</section>
