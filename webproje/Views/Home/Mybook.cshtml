
@using webproje.Models;
@model mybooks
@{
    ViewBag.Title = "Mybook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <!-- slider Area Start-->
    <div class="slider-area ">
        <div class="single-slider hero-overly slider-height2 d-flex align-items-center" data-background="../../temp/readBy/assets/img/hero/about.jpg">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap pt-100">
                            <h2>Kullanıcı Adı Soyadı</h2>
                            <nav aria-label="breadcrumb ">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="/home/userProf">Bilgilerim</a></li>
                                    <li class="breadcrumb-item"><a href="/home/index">Çıkış Yap</a></li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- slider Area End-->
    <!-- Services Area Start -->
    <div class="services-area1 section-padding30">
        <div class="container">
            <!-- section tittle -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-tittle mb-55">
                        <div class="front-text">
                            <h2 class="">Yayımlarım</h2>
                        </div>
                        <span class="back-text">Yayımlarım</span>
                    </div>
                </div>
            </div>

            @foreach (var item in Model.getbookByID(Session["loguser"].ToString()))
            {
                using (Html.BeginForm("Mybook", "Home", FormMethod.Post))
                {
                    @Html.HiddenFor(model => model.testerId, new { id = "HiddenText", Value = item.Id })
                    <div class="row">
                        <div class="col-xl-12 col-lg-12 col-md-6">
                            <div class="single-service-cap mb-30">
                                <div class="service-img">
                                    <img src="../../temp/readBy/assets/img/gallery/@item.img" alt="">
                                </div>
                                <div class="service-cap">

                                    <h3>    @Html.ActionLink(item.bookName, "BlogSingle", "home", new { Id = item.Id.ToString() }, null)</h3>
                                    <h5>    @item.summary</h5>
                                    <table>
                                        <tr>
                                            <td>
                                                <button  type="submit" class="more-btn" value="Kaldır" name="action:delete"><i class="fa fa-times"></i></button>
                                            </td>
                                        </tr>
                                    </table>

                                </div>
                                <div class="service-icon">
                                    <img src="../../temp/readBy/assets/img/icon/services_icon1.png" alt="">
                                </div>
                            </div>
                        </div>
                    </div>

                }
            }

        </div>
    </div>
    <!-- Services Area End -->
</main>

