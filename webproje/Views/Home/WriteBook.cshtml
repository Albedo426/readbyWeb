        <div class="single-slider hero-overly slider-height2 d-flex align-items-center" data-background="assets/img/hero/about.jpg">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap pt-100">
                            <h2>About us</h2>
                            <nav aria-label="breadcrumb ">
                                <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                                <li class="breadcrumb-item"><a href="#">Product</a></li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- slider Area End-->
    <!-- Text editör Area Start >
           <div class="slider-area ">
            <div class="slider-active">
                <div class="single-slider  hero-overly slider-height d-flex align-items-center" data-background="assets/img/hero/h1_hero.jpg">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-11">
                                <div id="summernote"></div>
    <script>
      $('#summernote').summernote({
        placeholder: 'Hello Bootstrap 4',
        tabsize: 2,
        height: 300
      });
    </script>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- text editör Area End -->
    <div class="slider-area ">
        <div class="single-slider hero-overly slider-height2 d-flex align-items-center" data-background="../../temp/readBy/assets/img/hero/about.jpg">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap pt-100">
                            <h2>Hadi Yazmaya Başla</h2>
                            <nav aria-label="breadcrumb ">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="/home/index">Anasayfa</a></li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- slider Area End-->
    <!-- ================ ha burası değiştu ================= -->
    <section class="contact-section">
        <div class="container">

            <div class="row">
                <div class="col-12">
                    <h2 class="contact-title">Kurallara uygun dilediğin gibi yazabilirsin.</h2>
                </div>
                <div class="col-lg-8">
                    @using (Html.BeginForm("WriteBook",
                    "Home",
                    FormMethod.Post,
                    new { @id = "contactForm", @class = "form-contact contact_form", @enctype = "multipart/form-data" }))
                    {

                    }
                    
                    @using (Html.BeginForm("WriteBook", "Home", FormMethod.Post, new { @id = "contactForm", @enctype = "multipart/form-data" }))
                    {
                        <div class="row">
                            <div class="col-sm-12">
                                <label for="file">Upload Image:</label>
                                @Html.TextBoxFor(m => m.ImageUpload, new { type = "file",  accept = "image/jpeg,  image/jpg" })
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.book.bookName, new
                                    {
                                   @id = "name",
                                   @type = "text",
                                   @class = "form-control valid",
                                   @onfocus = "this.placeholder = ''",
                                        @onblur = "this.placeholder = 'Yazının Başlığı'",
                                        @placeholder = "Yazının Başlığı"
                                    })
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.book.summary, new
                               {
                                   @id = "name",
                                   @type = "text",
                                   @class = "form-control valid",
                                   @onfocus = "this.placeholder = ''",
                                   @onblur = "this.placeholder = 'Yazının özetini(Max=50)'",
                                   @placeholder = "Yazının özetini(Max=50"
                               })
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    @Html.TextAreaFor(m => m.book.text, new
                               {
                                   @id = "name",
                                   @type = "text",
                                   @class = "form-control w-100",
                                   @onfocus = "this.placeholder = ''",
                                   @cols = "30",
                                   @rows = "9",
                                   @onblur = "this.placeholder =' Buraya yazını yazabilirsin'",
                                   @placeholder = "Buraya yazını yazabilirsin"
                               })
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.book.price, new
                               {
                                   @id = "name",
                                   @type = "text",
                                   @class = "form-control valid",
                                   @onfocus = "this.placeholder = ''",
                                   @onblur = "this.placeholder ='Yazının Fiyatı'",
                                   @placeholder = "Yazının Fiyatı"
                               })
                                </div>
                            </div>
                            <div class="col-sm-6" style="margin-bottom: 48px">
                                <h4>Kategori Seçiniz:</h4>
                                <div class="ex1" style="background-color: #00000005; max-width: 150px; max-height:150px; overflow: auto; padding: 10px">
                                    @for (int i = 0; i < Model.getAllcategory().Count; i++)
                                    {
                                        @Html.CheckBoxFor(m => Model.selected[i])
                                        @Html.DisplayFor(m => Model.getAllcategory()[i].Name)
                                        @Html.HiddenFor(m => Model.getAllcategory()[i].Id)
                                        @Html.HiddenFor(m => Model.getAllcategory()[i].Name) <br />
                                    }



                                </div>
                            </div>
                            <div class="col-sm-6">
                                @Html.DropDownListFor(m => m.book.LanguageId, (SelectList)ViewBag.test, "Lütfen Seçiniz", new { @class = "dropdown form-control" })
                            </div>
                            <div class="form-group mt-3">
                                <input type="submit" class="button boxed-btn" value="Kitabı Yayınla">
                            </div>
                            
                            <div class="hr"></div>
                        </div>
                    }
                </div>

            </div>
        </div>
    </section>

</main>

