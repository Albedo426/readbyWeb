                                    @using (Html.BeginForm("userProf", "Home", FormMethod.Post))
                                    {
                                        <div class="row gutters-sm">
                                            <div class="col-md-4 mb-3">
                                                <div class="card">
                                                    <div class="card-body">
                                                        <div class="d-flex flex-column align-items-center text-center">
                                                            <img src="../../temp/readBy/assets/img/team/team3.png" alt="Admin" class="rounded-circle" width="150">
                                                            <div class="mt-3">
                                                                <h4>@Model.user.name, @Model.user.lastName</h4>
                                                                <p class="text-secondary mb-1">@Model.user.userName</p>

                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-8">
                                                <div class="card mb-3">
                                                    <div class="card-body">
                                                        <div class="row">
                                                            <div class="col-sm-3">
                                                                <h6 class="mb-0">Adı :</h6>
                                                            </div>
                                                            <div class="col-sm-9 text-secondary">
                                                                @Html.TextBoxFor(m => m.user.name, new
                                                           {
                                                               @id = "name",
                                                               @type = "text",
                                                               @class = "form-control valid",
                                                               @onfocus = "this.placeholder = ''",
                                                               @onblur = "this.placeholder = 'Adınızı yazin'",
                                                               @placeholder = "Adınızı yazin"
                                                           })
                                                            </div>
                                                        </div>
                                                        <hr><div class="row">
                                                            <div class="col-sm-3">
                                                                <h6 class="mb-0">Soyadı :</h6>
                                                            </div>
                                                            <div class="col-sm-9 text-secondary">
                                                                @Html.TextBoxFor(m => m.user.lastName, new
                                                               {
                                                               @id = "name",
                                                               @type = "text",
                                                               @class = "form-control valid",
                                                               @onfocus = "this.placeholder = ''",
                                                               @onblur = "this.placeholder = 'Soyadınızı yazin'",
                                                               @placeholder = "soyadınızı yazin"
                                                                 })
                                                            </div>
                                                        </div>
                                                        <hr>
                                                        <div class="row">
                                                            <div class="col-sm-3">
                                                                <h6 class="mb-0">kullanıcı adi :</h6>
                                                            </div>
                                                            <div class="col-sm-9 text-secondary">
                                                                @Html.TextBoxFor(m => m.user.userName, new
                                                           {
                                                               @id = "name",
                                                               @type = "text",
                                                               @class = "form-control valid",
                                                               @onfocus = "this.placeholder = ''",
                                                               @onblur = "this.placeholder = 'kullanıcı adini yazin'",
                                                               @placeholder = "kullanıcı adini yazin"
                                                           })
                                                            </div>
                                                        </div>
                                                        <hr>
                                                        <div class="row">
                                                            <div class="col-sm-3">
                                                                <h6 class="mb-0">kullanıcı şifre :</h6>
                                                            </div>
                                                            <div class="col-sm-9 text-secondary">
                                                                @Html.TextBoxFor(m => m.user.userPass, new
                                                           {
                                                               @id = "name",
                                                               @type = "text",
                                                               @class = "form-control valid",
                                                               @onfocus = "this.placeholder = ''",
                                                               @onblur = "this.placeholder = 'şifre yazin'",
                                                               @placeholder = "şifre yazin"
                                                           })
                                                            </div>
                                                        </div>
                                                        <hr>
                                                        <div class="row">
                                                            <div class="col-sm-3">
                                                                <h6 class="mb-0">email :</h6>
                                                            </div>
                                                            <div class="col-sm-9 text-secondary">
                                                                @Html.TextBoxFor(m => m.user.eMail, new
                                                           {
                                                               @id = "name",
                                                               @type = "text",
                                                               @class = "form-control valid",
                                                               @onfocus = "this.placeholder = ''",
                                                               @onblur = "this.placeholder = 'email yazin'",
                                                               @placeholder = "email yazin"
                                                           })
                                                            </div>
                                                        </div>
                                                        <hr>
                                                        <div class="row">
                                                            <div class="col-sm-3">
                                                                <h6 class="mb-0">Iban :</h6>
                                                            </div>
                                                            <div class="col-sm-9 text-secondary">
                                                                @Html.TextBoxFor(m => m.user.Iban, new
                                                           {
                                                               @id = "name",
                                                               @type = "text",
                                                               @class = "form-control valid",
                                                               @onfocus = "this.placeholder = ''",
                                                               @onblur = "this.placeholder = 'iban yazin'",
                                                               @placeholder = "iban yazin"
                                                           })
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <button class="btn btn-primary">Bilgilerimi Güncelle</button>
                                                </div>

                                            </div>

                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- About Area End -->

</main>

